<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.wackwack.pic_card_memory">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardShuffle.NoActionBar"
        android:name=".PicCardMemoryApplication">
        <activity
            android:name="net.wackwack.pic_card_memory.view.game.DetailImageActivity"
            android:exported="false" />
        <activity
            android:name="net.wackwack.pic_card_memory.view.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.wackwack.pic_card_memory.view.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"/>
        <activity
            android:name="net.wackwack.pic_card_memory.view.game.GameActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
    </application>

</manifest>